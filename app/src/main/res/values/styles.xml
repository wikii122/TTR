<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="FiveTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/five_outer1</item>
        <item name="android:textColorSecondary">@color/five_outer2</item>
        <item name="android:background">@color/five_background</item>
    </style>

    <style name="TutorialTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/five_outer2</item>
        <item name="tabBackground">@color/five_background</item>
        <item name="tabTextAppearance">@style/TutorialTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/five_outer2</item>
    </style>
    <style name="TutorialTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/five_outer1</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
