<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scrollView"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/tutorial_rules_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/tutorial_rules_1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/five_outer1"/>

        <TextView
            android:id="@+id/tutorial_rules_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/tutorial_rules_2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/five_outer2"/>

        <TextView
            android:id="@+id/tutorial_rules_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/tutorial_rules_3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/five_outer1"/>

        <TextView
            android:id="@+id/tutorial_rules_text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/tutorial_rules_4"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/five_outer2"/>

        <TextView
            android:id="@+id/tutorial_rules_text_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/tutorial_rules_5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/five_outer1"/>

    </LinearLayout>
</ScrollView>
