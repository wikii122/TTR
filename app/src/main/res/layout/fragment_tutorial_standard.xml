<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:weightSum="10">

    <TextView
        android:id="@+id/tutorial_standard_title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:text="@string/tutorial_standard_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/five_outer1"/>

    <ImageView
        android:id="@+id/tutorial_standard_image"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:contentDescription="@string/tutorial_placeholder_image_description"
        android:gravity="center"
        android:src="@drawable/tutorial_placeholder"/>

    <TextView
        android:id="@+id/tutorial_standard_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:gravity="center"
        android:text="@string/tutorial_standard"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/five_outer1"/>
</LinearLayout>
